@model IEnumerable<SlugClub.Models.Models.Urun>
@{
    ViewBag.Title = "Index";
}

<section id="aa-product">

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-product-area">
                        <div class="aa-product-inner">
                            <!-- start prduct navigation -->
                            <ul class="nav nav-tabs aa-products-tab">
                                <li class="active"><a href="#mobilya" data-toggle="tab">Mobilya</a></li>
                                <li><a href="#elektronik" data-toggle="tab">Elektronik</a></li>
                                <li><a href="#dekorasyon" data-toggle="tab">Dekorasyon</a></li>
                                <li><a href="#giyim" data-toggle="tab">Giyim</a></li>
                                <li><a href="#aksesuar" data-toggle="tab">Aksesuar</a></li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                @if (Model.Count() == 0)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        Yakında ürün bulunamadı..
                                    </div>
                                }
                                else
                                {
                                    <div class="tab-pane fade in active" id="mobilya">
                                        <table class="table table-bordered" id="dataTable">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Ürün Adı</th>
                                                    <th scope="col">Fiyatı</th>
                                                    <th scope="col">Açıklama</th>
                                                    <th scope="col" width="150px"></th>
                                                    <th scope="col" width="150px"></th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ToList())
                                                {
                                                    if (item.KategoriId == 1)
                                                    {
                                                <tr>
                                                    <td>@item.UrunAdi</td>
                                                    <td>@item.Fiyat</td>
                                                    <td>@item.Aciklama</td>
                                                    <td style="max-width:20px">@Html.ActionLink("Satın Al", "SatinAl", item, new { @class = "btn btn-primary" })</td>
                                                    <td style="max-width:20px">@Html.ActionLink("Talep Gönder", "Talep", item, new { @class = "btn btn-primary" })</td>

                                                </tr>
                                                    }
                                                }
                                            </tbody>
